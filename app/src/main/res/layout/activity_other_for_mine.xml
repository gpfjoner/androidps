<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hint_back"
    android:orientation="vertical"
    tools:context="com.joner.mnbj.activity.mine.OtherForMineActivity">

    <TextView
        android:id="@+id/tv_share"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="50px"
        android:layout_marginTop="60px"
        android:clickable="true"
        android:drawableLeft="@drawable/share"
        android:drawablePadding="50px"
        android:text="分享给好友"
        android:textColor="@color/mine_other_color"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/tvPayMoney"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_share"
        android:layout_marginStart="50px"
        android:layout_marginTop="50px"
        android:drawableLeft="@drawable/money_in"
        android:drawablePadding="50px"
        android:text="打赏作者"
        android:textColor="@color/mine_other_color"
        android:textSize="20sp" />

    <include layout="@layout/pay_layout_item" />

    <TextView
        android:id="@+id/tv_upMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="50px"
        android:layout_marginTop="150px"
        android:clickable="true"
        android:drawableLeft="@drawable/statistics_clicked"
        android:drawablePadding="50px"
        android:text="反馈给作者"
        android:textColor="@color/mine_other_color"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/etDescribe"
        android:layout_width="match_parent"
        android:layout_height="270px"
        android:layout_marginTop="20px"
        android:background="@null"
        android:gravity="left|top"
        android:hint="反馈信息描述..."
        android:maxLines="8"
        android:minLines="5"
        android:paddingLeft="18px" />

    <Button
        android:id="@+id/btn_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="提交反馈信息" />

    <Button
        android:layout_marginTop="20px"
        android:id="@+id/btn_back"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="返回" />
</com.zhy.autolayout.AutoLinearLayout>
